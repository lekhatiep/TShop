@model eShopSolution.ViewModels.System.Users.RoleAssignRequest

@{ ViewData["Title"] = "Gán quyền người dùng"; }

<div class="container-fluid">
    <h1 class="mt-4">Gán quyền người dùng</h1>

    <div class="card mb-4">
        <div class="card-header">
            Danh sách quyền người dùng
        </div>
        <div class="card-body">
            <div class="col-md-4">
                <form asp-action="RoleAssign">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" class="form-control" type="hidden" />
                    <table>
                        @for (var i = 0; i < Model.Roles.Count; i++)
                        {
            <tr>
                <td>
                    <div class="form-group">
                        @Model.Roles[i].Name
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <input asp-for="Roles[i].Selected" type="checkbox" />
                        <input asp-for="Roles[i].Id" type="hidden" />
                        <input asp-for="Roles[i].Name" type="hidden" />
                    </div>
                </td>
            </tr>}
                    </table>
                    <div class="form-group">
                        <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>