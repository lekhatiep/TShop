@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = CultureInfo.CurrentCulture.Name;
}
@section script{
    <script src="/js/cart.js"></script>
    <script>
        var cartController = new CartController();
        cartController.initialize();
    </script>
}
<ul class="breadcrumb">
    <li><a href="/"><localize>Home</localize></a> <span class="divider">/</span></li>
    <li class="active"> SHOPPING CART</li>
</ul>
<h3>  SHOPPING CART  [<span id="number_item_header" class="item_header">0</span>]<a href="/" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Continue Shopping </a></h3>
<hr class="soft" />
<table class="table table-bordered table_item_cart">
    <thead>
        <tr>
            <th>Product</th>
            <th>Description</th>
            <th>Quantity/Update</th>
            <th>Price</th>
            <th>Discount</th>
        </tr>
    </thead>
    <tbody id="tbl_cart_body">
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" style="text-align:right"><strong>TOTAL</strong></td>
            <td class="label label-important" style="display:block"> <strong> <span id="lbl_total"></span></strong></td>
        </tr>
    </tfoot>
</table>

<table class="table table-bordered">
    <tbody>
        <tr>
            <td>
                <form class="form-horizontal">
                    <div class="control-group">
                        <label class="control-label"><strong> VOUCHERS CODE: </strong> </label>
                        <div class="controls">
                            <input type="text" class="input-medium" placeholder="CODE">
                            <button type="submit" class="btn"> ADD </button>
                        </div>
                    </div>
                </form>
            </td>
        </tr>
    </tbody>
</table>
<a href="products.html" class="btn btn-large"><i class="icon-arrow-left"></i><localize>Continue Shopping</localize></a>
<a href="/@culture/Cart/Checkout" class="btn btn-large pull-right"><localize>Next Purchase</localize> <i class="icon-arrow-right"></i></a>